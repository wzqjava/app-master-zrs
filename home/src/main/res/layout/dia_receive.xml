<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/right_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@drawable/boy"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="12dp"
        android:layout_marginRight="45dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/receive_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/right_iv"
            android:maxWidth="180dp"
            android:text="请问可以更换支付方式吗"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:background="@drawable/receive"/>


        <ImageView
            android:id="@+id/receive_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/right_iv"
            android:adjustViewBounds="true"
            android:maxWidth="180dp"
            android:padding="5dp"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/receive_yy"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/right_iv"
            android:padding="5dp"
            android:src="@drawable/rightyy"
            android:visibility="gone"
            android:background="@drawable/receive"/>

    </LinearLayout>

</RelativeLayout>
